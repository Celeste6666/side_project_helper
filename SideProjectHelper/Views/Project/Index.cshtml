@model IEnumerable<SideProjectHelper.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-between align-items-center">
    <h1>Project List</h1>
    <a asp-action="Create" class="btn btn-outline-success me-2">Create New</a>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.Photo != null)
                {
                    <img src="~/img/project/@item.Photo" alt="Project Photo" class="rounded thumb"/>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ProjectId" class="btn btn-success mx-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>